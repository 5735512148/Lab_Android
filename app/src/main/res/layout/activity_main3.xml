<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bde0e3"
    tools:context="com.example.ss.game.Main3Activity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="59dp"
            app:srcCompat="@drawable/conan3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="โยชิดะ อายูมิ"
            android:fontFamily="serif"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"

            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="โยชิดะ อายูมิ (ญี่ปุ่น: 吉田歩美; อังกฤษ: Amy Yoshida) เป็นหนึ่งในสมาชิกของขบวนการนักสืบเยาวชน ในเรื่องยอดนักสืบจิ๋วโคนัน ซึ่งในเธอแอบชอบโคนันเพราะเห็นว่าเขาคอยช่วยเหลือเธอในยามลำบากอยู่เสมอ อายูมิมักเรียกไฮบาระว่า ไอจัง"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/next1" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
